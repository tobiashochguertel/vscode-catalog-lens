#!/usr/bin/env sh

# Modern Husky v9 - no need to source husky.sh anymore

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

printf "${BLUE}ğŸ” Running pre-commit checks...${NC}\n"
printf "\n"

# STEP 1: Format code with Prettier
printf "${BLUE}âœ¨ Step 1/7: Formatting code with Prettier...${NC}\n"
pnpm format > /dev/null 2>&1

if [ $? -ne 0 ]; then
  printf "\n"
  printf "${RED}âŒ Prettier formatting failed!${NC}\n"
  printf "${YELLOW}ğŸ’¡ Run 'pnpm format' to see errors.${NC}\n"
  exit 1
fi

printf "${GREEN}âœ“ Prettier formatting completed${NC}\n"
git add -u

# STEP 2: Lint and fix markdown
printf "\n"
printf "${BLUE}ğŸ“ Step 2/7: Linting markdown files...${NC}\n"
pnpm markdown:fix > /dev/null 2>&1

if [ $? -ne 0 ]; then
  printf "\n"
  printf "${YELLOW}âš ï¸  Markdown linting found issues (attempting fix)${NC}\n"
  pnpm markdown:fix
fi

printf "${GREEN}âœ“ Markdown linting completed${NC}\n"
git add -u

# STEP 3: Auto-fix linting issues
printf "\n"
printf "${BLUE}ï¿½ Step 3/7: Linting and auto-fixing...${NC}\n"
pnpm lint:fix

# Check if auto-fix worked
if [ $? -ne 0 ]; then
  printf "\n"
  printf "${RED}âŒ Lint auto-fix couldn't resolve all issues!${NC}\n"
  printf "${YELLOW}ğŸ’¡ Please fix the remaining errors manually.${NC}\n"
  printf "${YELLOW}ğŸ’¡ Run 'pnpm lint' to see all errors.${NC}\n"
  exit 1
fi

# Re-add auto-fixed files to staging
printf "${GREEN}âœ“ Auto-fix completed${NC}\n"
printf "${BLUE}ğŸ“¦ Re-staging auto-fixed files...${NC}\n"
git add -u

# STEP 4: Verify no lint errors remain
printf "\n"
printf "${BLUE}ğŸ“‹ Step 4/7: Verifying lint status...${NC}\n"
pnpm lint

if [ $? -ne 0 ]; then
  printf "\n"
  printf "${RED}âŒ Lint errors still exist after auto-fix!${NC}\n"
  printf "${YELLOW}ğŸ’¡ Some issues require manual fixes.${NC}\n"
  printf "${YELLOW}ğŸ’¡ Please review and fix the errors above.${NC}\n"
  exit 1
fi

printf "${GREEN}âœ“ No lint errors${NC}\n"

# STEP 5: Type checking
printf "\n"
printf "${BLUE}ï¿½ Step 5/7: Type checking...${NC}\n"
pnpm typecheck

if [ $? -ne 0 ]; then
  printf "\n"
  printf "${RED}âŒ Type check failed!${NC}\n"
  printf "${YELLOW}ğŸ’¡ Fix type errors before committing.${NC}\n"
  exit 1
fi

printf "${GREEN}âœ“ Type check passed${NC}\n"

# STEP 6: Build
printf "\n"
printf "${BLUE}ğŸ—ï¸  Step 6/7: Building...${NC}\n"
pnpm build > /dev/null 2>&1

if [ $? -ne 0 ]; then
  printf "\n"
  printf "${RED}âŒ Build failed!${NC}\n"
  printf "${YELLOW}ğŸ’¡ Run 'pnpm build' to see build errors.${NC}\n"
  exit 1
fi

printf "${GREEN}âœ“ Build successful${NC}\n"

# STEP 7: Validate GitHub Actions workflows (if actionlint is available)
printf "\n"
printf "${BLUE}âš™ï¸  Step 7/7: Validating GitHub Actions workflows...${NC}\n"

if command -v actionlint > /dev/null 2>&1; then
  if ./scripts/lint-workflows.sh > /dev/null 2>&1; then
    printf "${GREEN}âœ“ Workflow validation passed${NC}\n"
  else
    printf "\n"
    printf "${YELLOW}âš ï¸  Workflow validation found issues (non-blocking):${NC}\n"
    ./scripts/lint-workflows.sh
    printf "\n"
    printf "${YELLOW}ğŸ’¡ Fix workflow errors when convenient.${NC}\n"
    printf "${YELLOW}ğŸ’¡ Run 'pnpm workflow:lint' to see details.${NC}\n"
  fi
else
  printf "${YELLOW}âš ï¸  actionlint not installed (skipping)${NC}\n"
  printf "${YELLOW}ğŸ’¡ Install with: brew install actionlint${NC}\n"
fi

printf "\n"
printf "${GREEN}âœ… All pre-commit checks passed!${NC}\n"
printf "\n"
