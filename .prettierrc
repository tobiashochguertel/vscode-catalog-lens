    },
    {
      "files": [
        "*.yaml",
        "*.yml"
      ],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ],
  "plugins": [
    "/Users/tobiashochgurtel/dotfiles/apps-config/prettier/node_modules/@prettier/plugin-hermes/index.mjs",
    "/Users/tobiashochgurtel/dotfiles/apps-config/prettier/node_modules/@prettier/plugin-oxc/index.mjs"
  ],
  "printWidth": 200,
  "proseWrap": "preserve",
