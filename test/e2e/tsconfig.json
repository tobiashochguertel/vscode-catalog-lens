{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "strict": true,
    "outDir": "../../out/test/e2e",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
